@model MLMBioWill.Models.Master.CountryViewModel

<script src="~/Scripts/Common/generic.common.methods.js"></script>
<script src="~/Scripts/Master/Country/country-validations.js"></script>
<script src="~/Scripts/Master/Country/country-methods.js"></script>
<script src="~/Scripts/Common/generic.common.events.js"></script>
<script src="~/Scripts/Master/Country/country-events.js"></script>

<!-- Content -->
<div class="content-area p-y-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h4>Country</h4>
                    <ol class="breadcrumb no-bg m-b-1">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Country</a></li>
                        <li class="breadcrumb-item"><a href="#">Search</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Country Create
                    </h5>
                    <form role="form" id="frmCountry">
                        <div class="card-block p-t-0 p-b-0">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="">Country Code</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter country code" name="Country.CountryCode" id="txtCountryCode" maxlength="10">
                                        <input type="hidden" id="hdnCountryCode" name="Country.CountryCode" value="">
                                        <span class="input-group-addon">
                                            <i class="fa fa-sort-alpha-asc"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label for="">Country Name</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter country name" name="Country.CountryName" id="txtCountryName" maxlength="25">
                                        <input type="hidden" name="Country.CountryName" id="hdnCountryName" value="">
                                        <span class="input-group-addon">
                                            <i class="fa fa-globe"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label for="">Set Active</label>
                                    <div class="input-group">
                                        <input class="js-switch" data-color="#1bc044" checked="" data-switchery="true" value="true" name="Country.IsActive" type="checkbox" id="Flag">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row" style="text-align: center;">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="button" id="btnSearchCountry" class="btn btn-purple btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-search"></i></span>Search</button>
                                        <button type="button" id="btnSaveCountry" class="btn btn-success btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-save"></i></span>Save</button>
                                        <button type="reset" id="btnResetCountry" class="btn btn-warning btn-rounded label-left w-min-sm m-b-0-75 waves-effect waves-light"><span class="btn-label"><i class="ti-reload"></i></span>Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="submit-progress hidden">
                        <i class="fa fa-2x fa-spinner fa-spin"></i>
                        <label>Please wait while Saving Data...</label>
                    </div>
                </div>
                <div class="card">
                    <h5 class="card-header">
                        <span style="vertical-align: middle;" class="s-icon"><i class="ti-wand"></i></span>&nbsp; Country Listing
                    </h5>
                    <form role="form" id="frmSearchCountry">
                        <input type="hidden" id="hdnSearchCountryId" value="" name="Filter.CountryId" />
                        <div class="card-block p-t-0 p-b-0">
                            <div class="overflow-x-auto">
                                <table class="table m-b-0" id="tblCountry" data-current-page=""></table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







